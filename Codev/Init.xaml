<hc:Window x:Class="Codev.Init"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Codev"
        mc:Ignorable="d"
        Title="Init" Height="250" Width="400"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        BorderBrush="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border Background="#eff2f7" CornerRadius="10" BorderThickness="1" BorderBrush="#c7c7c7">
        <Grid Margin="0,9,0,-9">
            <hc:ImageBlock HorizontalAlignment="Center" Height="80" Margin="0,44,0,0" VerticalAlignment="Top" Width="80" Source="/Imagens/logo.png" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" UseLayoutRounding="True"/>
            <ProgressBar IsIndeterminate="True" Margin="22,208,22,20" Foreground="#FF623ED0" RenderTransformOrigin="0.5,0.5" Height="7">
                <ProgressBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <Label Content="Por favor, aguarde." Margin="0,178,0,0" VerticalAlignment="Top" Background="Transparent" FontFamily="Segoe UI Semibold" BorderBrush="Transparent" Foreground="DarkGray" FontWeight="Bold"/>
        </Grid>
    </Border>
</hc:Window>
