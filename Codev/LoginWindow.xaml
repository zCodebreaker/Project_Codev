<hc:Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:Codev"
        xmlns:hc="https://handyorg.github.io/handycontrol" 
        x:Class="Codev.LoginWindow"
        Title="LoginWindow" Height="450" Width="400"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        BorderBrush="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <hc:Window.Resources>
        <Style TargetType="Control">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
    </hc:Window.Resources>
    <Border Background="#eff2f7" CornerRadius="10" BorderThickness="1" BorderBrush="#c7c7c7">
        <Grid x:Name="Login" RenderTransformOrigin="0.621,0.821">
            <hc:TextBox hc:InfoElement.Placeholder="Usuário" HorizontalAlignment="Left" Margin="84,204,0,0" VerticalAlignment="Top" Width="236" Height="30" Background="WhiteSmoke" BorderThickness="0,0,0,0" Foreground="#FF353535" FontFamily="Arial"/>
            <hc:PasswordBox hc:InfoElement.Placeholder="Senha" HorizontalAlignment="Left" Margin="84,247,0,0" VerticalAlignment="Top" Width="236" Height="30" Background="WhiteSmoke" BorderThickness="0,0,0,0" Foreground="#FF353535" FontFamily="Arial"/>
            <Button Content="Login" Margin="84,317,0,0" VerticalAlignment="Top" Width="236" Height="30" Background="#FF623ED0"  BorderThickness="0,0,0,0" Foreground="White" HorizontalAlignment="Left"/>
            <Button x:Name="Fechar" Content="✖" Margin="352,10,0,0" VerticalAlignment="Top" Background="Transparent"   BorderThickness="0,0,0,0" Foreground="DarkGray" RenderTransformOrigin="-0.485,1.585" Click="Fechar_Click" Width="36" HorizontalAlignment="Left"/>
            <hc:ImageBlock HorizontalAlignment="Left" Height="100" Margin="152,56,0,0" VerticalAlignment="Top" Width="100" Source="/Imagens/logo.png" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" UseLayoutRounding="True"/>
            <ToggleButton Content="Lembrar Senha?" HorizontalContentAlignment="Right" Margin="83,285,82,143" Foreground="DarkGray" Height="20" Width="233">
                <ToggleButton.Resources>
                    <SolidColorBrush x:Key="PrimaryBrush" Color="#FF623ED0"/>
                </ToggleButton.Resources>
                <ToggleButton.Style>
                    <StaticResource ResourceKey="ToggleButtonSwitch"/>
                </ToggleButton.Style>
            </ToggleButton>
        </Grid>
    </Border>
</hc:Window>